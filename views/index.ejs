<!doctype html>
<html>
  <head>
    
    <title>Welcome to <%=forumName%></title>

    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <link rel="stylesheet"  type="text/css" href="/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script> 

  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm justifycontent-center">
    
      <div class="container-fluid">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <a class="nav-link" href="/"><%=forumName%></a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" role="button" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Topics
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="overflow-x: hidden; overflow-y:hidden; max-height: 105px;" id ="dropmenu">
            <input type=text class="dropdown-item" id="searchSelector" placeholder="search topics...">
            <% availableTopics.forEach((topic)=>{%>
      
              <a class="dropdown-item" href="<%= `topics/${topic.Title}/posts` %>"><%=topic.Title%></a>
          
            <% }); %>
          </div>
          <script>
            //https://www.w3schools.com/bootstrap/tryit.asp?filename=trybs_filters_list&stacked=h
            $(document).ready(function(){
              $("#searchSelector").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#dropmenu a").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
              });
            });

            $("#dropdownMenuLink").on("click",function(){
              $("#searchSelector").val("");
              var value = $(this).val().toLowerCase();
                $("#dropmenu a").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            })
            </script>
        </li>
        <li class="nav-item dropdown">
          <% if(session.user_id) {%>
          <a class="nav-link dropdown-toggle" role="button" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/account"> Settings </a>
            <a class="dropdown-item" href="/logout"> Logout </a>
          </div>
          <%} else{%>
            <a class="nav-link" href="/login">Login</a>
         <%}%>
        </li>
        <li class="nav-item">
          <% if(session.user_id) {%>
            <div class="btn-group dropdown">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" >
              add
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item"  data-bs-toggle="modal" data-bs-target="#topicModal" role="button" type="button"> Topic </a>
              <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#postModal" role="button" type="button"> Post </a>
            </div>
          </div>
          <% }%>
        </li>
      </ul>
      <form action="/search-result" method="GET" class="d-flex">
        <input class="form-control" name="keyword" placeholder="Search My4uM">
        <button class="btn btn-outline-success form-inline" type="submit" style="display:inline-block">Search</button>
      </form>
    </div>
  </nav>
  <h1 class="mt-5"><%=forumName%></h1>
    <!-- <p><a href="/"><%=forumName%></a></p>
    <p><a href="/search">Search Topics</a></p>
    <% if(session.user_id) {%>

      <div class="dropdown show">
        <button class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Account
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/account"> Settings </a>
          <a class="dropdown-item" href="/logout"> Logout </a>
        </div>
      </div>
        
    <%} else{%>

      <p><a href="/login">Login</a></p>

    <%}%>
     -->
 

  <h4 style="width:70%; display:flex; flex-direction:column;margin:auto;"> Recent Topics </h4>
  <ul style="list-style:none;" class="topic-container">
  <% availableTopics.forEach((topic)=>{%>

    <li>
    <a href="<%= `topics/${topic.Title}/posts` %>" class="topic"><%=topic.Title%></a>
  </li>
  <% }); %>

  
  

  
<div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> What would you like to post? </h5>
        <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/postadded" method="POST">
        <div class="form-group">
        <div class="modal-body">
          <input type="text" class="form-control mb-3" aria-describedby="emailHelp" placeholder="Enter Topic" id="topic" name="topic" required>
          <datalist class="mb-3" id="topicSelect">
            <% new Set(availableTopics.map(({Title})=>Title)).forEach((title)=>{%>
              
              <%{%>
              <option name="topic" value="<%=title%>"><%=title%></option>
              <%}%>
              <%});%>


          </datalist>
          
          
       
  
        
          <input type="text" class="form-control mb-3" id="title" name="title" aria-describedby="emailHelp" placeholder="Enter Title" required>
          <textarea type="text" class="form-control mb-3" id="content" name="content" placeholder="Content" rows="4" required></textarea>
      </div>
     
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <input class="btn btn-primary" type="submit" value="Add">
      </div>

    </form>
    </div>
  </div>
</div>
</div>
<div class="modal fade" id="topicModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> What topic would you like to add? </h5>
        <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/topicadded" method="POST">
        <div class="form-group">
        <div class="modal-body">
       
          <input type="text" class="form-control" id="topic" name="topic" aria-describedby="emailHelp" placeholder="Enter Topic" required>
  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <input class="btn btn-primary" type="submit" value="Add">
      </div>

    </form>
    </div>
  </div>
</div>
</div>






  </ul>

  </body>
</html>
