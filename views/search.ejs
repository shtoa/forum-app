<!doctype html>
<html>
  <head>
    <title>Search <%=forumName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <link rel="stylesheet"  type="text/css" href="/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script> 

  </head>
  <body>

    <nav class="navbar navbar-dark bg-dark navbar-expand-sm justifycontent-center">
    
      <div class="container-fluid">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <a class="nav-link" href="/"><%=forumName%></a>
        </li>
        <li class="nav-item dropdown">
          <% if(session.user_id) {%>
          <a class="nav-link dropdown-toggle" role="button" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/account"> Settings </a>
            <a class="dropdown-item" href="/logout"> Logout </a>
          </div>
          <%} else{%>
            <a class="nav-link" href="/login">Login</a>
         <%}%>
        </li>
      </ul>
      <form action="/search-result" method="GET" class="d-flex">
        <input class="form-control" name="keyword" placeholder="Search for Topics">
        <button class="btn btn-outline-success form-inline" type="submit" style="display:inline-block">Search</button>
      </form>
    </div>
  </nav>

    <h1>Search Topic on <%=forumName%></h1>
    <form action="/search-result" method="GET">
      <p>What are you interested in?</p>
      <input id="search-box" type="text" name="keyword" placeholder= "Search something fun">
      <input type="submit" value="Search">
    </form>
    <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"> What would you like to post? </h5>
            <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/postadded" method="POST">
            <div class="form-group">
            <div class="modal-body">
              <input type="text" class="form-control mb-3" aria-describedby="emailHelp" placeholder="Enter Topic" id="topic" name="topic" required>
              <datalist class="mb-3" id="topicSelect">
                <% new Set(availableTopics.map(({Title})=>Title)).forEach((title)=>{%>
                  
                  <%{%>
                  <option name="topic" value="<%=title%>"><%=title%></option>
                  <%}%>
                  <%});%>
    
    
              </datalist>
              
              
           
      
            
              <input type="text" class="form-control mb-3" id="title" name="title" aria-describedby="emailHelp" placeholder="Enter Title" required>
              <textarea type="text" class="form-control mb-3" id="content" name="content" placeholder="Content" rows="4" required></textarea>
          </div>
         
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input class="btn btn-primary" type="submit" value="Add">
          </div>
    
        </form>
        </div>
      </div>
    </div>
    </div>
    <div class="modal fade" id="topicModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"> What topic would you like to add? </h5>
            <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/topicadded" method="POST">
            <div class="form-group">
            <div class="modal-body">
           
              <input type="text" class="form-control" id="topic" name="topic" aria-describedby="emailHelp" placeholder="Enter Topic" required>
      
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input class="btn btn-primary" type="submit" value="Add">
          </div>
    
        </form>
        </div>
      </div>
    </div>
    </div>
    
    
    
    
  </body>
</html>