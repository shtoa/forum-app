<!doctype html>
<html>
  <head>
    <title>Welcome to <%=forumName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <link rel="stylesheet"  type="text/css" href="/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script> 

  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm justifycontent-center">
    
      <div class="container-fluid">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <a class="nav-link" href="/"><%=forumName%></a>
        </li>
        <li class="nav-item dropdown">
          <% if(session.user_id) {%>
          <a class="nav-link dropdown-toggle" role="button" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/account"> Settings </a>
            <a class="dropdown-item" href="/logout"> Logout </a>
          </div>
          <%} else{%>
            <a class="nav-link" href="/login">Login</a>
         <%}%>
        </li>
      </ul>
      <form action="/search-result" method="GET" class="d-flex">
        <input class="form-control" name="keyword" placeholder="Search for Topics">
        <button class="btn btn-outline-success form-inline" type="submit" style="display:inline-block">Search</button>
      </form>
    </div>
  </nav>
  
  <ul class="posts-container">

      <h5 class="mt-5">User: <%=accountInfo[0].Username%>'s Topics</h5>
      <% new Set(accountInfo.map(({topicTitle})=>topicTitle)).forEach((title)=>{%> <!-- creates a set from the titles -->
          
          <li>
            <a href="<%= `/topics/${title}/posts` %>" class="topic"><%=title%></a>
          </li>
        
 
    
      <% }); %>
    
    
      <h5 class="mt-5">User: <%=accountInfo[0].Username%>'s Posts</h5>
      <% accountInfo.forEach((info)=>{%>
        <div class="card container-fluid">
          <div class="card-body">
            <h5 class="card-title"><%=info.topicTitle%>: <%=info.postTitle%></h5>
            <h6 class="card-subtitle mb-3 small"> by <a class="nav-item" href="<%=`/user/${info.Username}`%>"> <%=info.Username%></a> - <%=new Date(info.postCreatedAt).toDateString()%></h6>
            <p class="card-text"> <%=info.postContent%> </p>
          </div>
        </div>
    
      <% }); %>

  </body>
</html>
